{
  "name": "copilot-bridge",
  "displayName": "Copilot Bridge",
  "description": "Expose GitHub Copilot Chat via local HTTP endpoint for external tools",
  "version": "0.1.0",
  "publisher": "ondrej-winter",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copilot",
    "bridge",
    "http",
    "api",
    "chat"
  ],
  "activationEvents": [
    "onCommand:copilotBridge.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotBridge.start",
        "title": "Copilot Bridge: Start"
      },
      {
        "command": "copilotBridge.stop",
        "title": "Copilot Bridge: Stop"
      }
    ],
    "configuration": {
      "title": "Copilot Bridge",
      "properties": {
        "copilotBridge.port": {
          "type": "number",
          "default": 32123,
          "description": "Port number for the HTTP server"
        },
        "copilotBridge.bindAddress": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Bind address (always enforced to localhost)"
        },
        "copilotBridge.token": {
          "type": "string",
          "default": "",
          "description": "Optional bearer token for authentication (empty = no auth)"
        },
        "copilotBridge.defaultFamily": {
          "type": "string",
          "default": "gpt-4o",
          "description": "Default model family (e.g., 'gpt-4o', 'gpt-3.5-turbo', or 'auto')"
        },
        "copilotBridge.maxBodyBytes": {
          "type": "number",
          "default": 1000000,
          "description": "Maximum request body size in bytes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/node": "^18.x",
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^4.0.18",
    "openai": "^4.28.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
